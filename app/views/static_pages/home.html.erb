 <% provide(:title, "Home") %>
<div class="row">
  <aside class="col-md-4">
    <% if logged_in? %>
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section class="entry_form">
        <%= render 'shared/entry_form' %>
      </section>
    <% else %>
      <div class="center jumbotron">
        <h3>Test Account</h3>
        <h2>Email: example@railstutorial.org</h2>
        <h2>Password: foobar</h2>
        <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </aside>
  <div class="col-md-8">
    <h3>Entry list</h3>
    <%= render 'shared/feed' %>
  </div>
</div>